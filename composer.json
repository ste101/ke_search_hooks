{
	"name": "tpwd/ke_search_hooks",
	"type": "typo3-cms-extension",
	"description": "Hooks example for ke_search. Feel free to use this as a kickstarter for your own custom indexer or hooks.",
	"autoload": {
		"psr-4": {
			"Tpwd\\KeSearchHooks\\": "Classes"
		}
	},
	"require": {
		"tpwd/ke_search": "^5"
	},
	"require-dev": {
		"typo3/cms-core": "^11.0 || ^12.0",
		"typo3/cms-fluid": "^11.0 || ^12.0",
		"phpstan/phpstan": "^1.8",
		"friendsofphp/php-cs-fixer": "^3.27"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "ke_search_hooks",
			"web-dir": ".Build/web"
		}
	},
	"replace": {
		"typo3-ter/ke_search_hooks": "self.version",
		"teaminmedias-pluswerk/ke_search_hooks": "self.version"
	},
	"config": {
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"bin-dir": ".Build/bin",
		"vendor-dir": ".Build/vendor"
	}
}
